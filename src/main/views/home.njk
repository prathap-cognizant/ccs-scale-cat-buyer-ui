{% extends "template.njk" %}

{% set title = 'home | Contract a Thing' %}
{# {% set heading = t('Welcome to the Money Claim legal rep beta') %} #}

{% block content %}
    <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{ jsonObj.heading }}
      </h1>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <p class="govuk-body">{{ jsonObj.signposting.heading }}</p>

      <ul class="govuk-list govuk-list--bullet">
        {% for item in jsonObj.signposting.list %}
          <li>{{ item }}</li>
        {% endfor %}
      </ul>

    <a href="#" role="button" draggable="false" class="govuk-button" data-module="govuk-button">
      Sign in or register
    </a>
      {{ jsonObj.html | safe }}
    </div>

    <div class="govuk-grid-column-one-third">

      <div class="ccs-callout-panel">
        <h2 class="govuk-heading-m">How to get support</h2>

        <p class="govuk-body">You can contact us by email, phone or using the <a href="https://www.crowncommercial.gov.uk/contact">enquiry form</a>. </p>

        <h3 class="govuk-heading-s govuk-!-margin-0">Email: </h3>
        <p class="govuk-body"><a href="mailto:info@crowncommercial.gov.uk">info@crowncommercial.gov.uk</a> </p>

        <h3 class="govuk-heading-s govuk-!-margin-0">Telephone: </h3>
        <p class="govuk-body"><a href="tel:03454102222">0345 410 2222</a></p>

        <p class="govuk-body">CCS customer services team is available Monday to Friday, 9am to 5pm.</p>
      </div>

    </div>

  </div>
{% endblock %}
